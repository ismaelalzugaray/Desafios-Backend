
<div class="ulContainer">
<h1>Lista de productos</h1>
    <ul>
        {{#each docs}}
        <li><strong>Nombre:</strong> {{this.title}}</li>

        <form class="ulForm" method="GET" action="/api/products/{{this.id}}">
            <button type="submit">Ver detalle</button>
        </form>

        <form class="ulForm" method="POST" action="/api/carts/6445d664ee1020504d8cb7df/products/{{this.id}}">
        <button id="addToCart" type="submit">Agregar al carrito</button>
        </form>

        {{/each}}
    </ul>

</div>

<div class="paginateContainer">
    {{#if hasPrevPage}}
        <button><a href={{prevLink}}><< Anterior</a></button>
    {{/if}}
    &nbsp;
    {{page}}
    &nbsp;
        {{#if hasNextPage}}
        <button><a href={{nextLink}}>Siguiente >></a></button>
    {{/if}} 
</div>



<script src="/js/products.js"></script>
